    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div class="container">
    <div class="panel">
        <div class="panel-body">
            <header>
                <div>
                    <h1>Admin blog bersiroth</h1>
                </div>
            </header>
            <nav class="navbar navbar-default">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                            data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('bersi_blog_article') }}">Accueil</a></li>
                        <li><a href="{{ path('admin_bersi_blog_articles') }}">Articles</a></li>
                        <li><a href="{{ path('admin_bersi_blog_articles') }}">Auteurs</a></li>
                        <li><a href="{{ path('admin_bersi_blog_articles') }}">Categories</a></li>
                        <li><a href="{{ path('bersi_blog_article') }}">Images</a></li>
                        <li><a href="{{ path('bersi_blog_article') }}">Videos</a></li>
                    </ul>
                    <form class="navbar-form navbar-right" role="search">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Rechercher">
                        </div>
                        <button type="submit" class="btn btn-default">Valider</button>
                    </form>
                </div>
            </nav>
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-warning alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ flashMessage }}
                    </div>
                {% endfor %}
            {% block body %}
                <div class="row">
                    <div class="col-sm-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Suivre le blog</h3>
                            </div>
                            <div class="panel-body">
                                <ul class="list-unstyled">
                                    <li>Video 1</li>
                                    <li>Video 2</li>
                                    <li>Video 3</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Suivre le blog</h3>
                            </div>
                            <div class="panel-body">
                                <ul class="list-unstyled">
                                    <li>Video 1</li>
                                    <li>Video 2</li>
                                    <li>Video 3</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Suivre le blog</h3>
                            </div>
                            <div class="panel-body">
                                <ul class="list-unstyled">
                                    <li>Video 1</li>
                                    <li>Video 2</li>
                                    <li>Video 3</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>
</div>
</div>
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#chatTwitch').css("height", $('#videoTwitch').css("height"));
        });
    </script>
{% endblock %}
</body>
</html>
