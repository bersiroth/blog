<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>{% block title %}Blog de bersiroth{% endblock %}</title>

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap-theme.css">

    <link rel="stylesheet" href="/css/generale.css">
    <link rel="stylesheet" href="/js/redactor/redactor.css">

    <link rel="stylesheet" href="/css/bootstrap-datetimepicker.css">

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:700,800,400' rel='stylesheet' type='text/css'>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div class="container">
    <div class="panel">
        <div class="panel-body">
            <header>
                <div>
                    <h1>Admin blog bersiroth</h1>
                </div>
            </header>
            {% block menu %}
                {{ render(controller("BersiBlogBundle:Admin/Default:menu")) }}
            {% endblock %}
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% block body %}
                <div class="row">
                    <div class="col-sm-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Suivre le blog</h3>
                            </div>
                            <div class="panel-body">
                                <ul class="list-unstyled">
                                    <li>Video 1</li>
                                    <li>Video 2</li>
                                    <li>Video 3</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Suivre le blog</h3>
                            </div>
                            <div class="panel-body">
                                <ul class="list-unstyled">
                                    <li>Video 1</li>
                                    <li>Video 2</li>
                                    <li>Video 3</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Suivre le blog</h3>
                            </div>
                            <div class="panel-body">
                                <ul class="list-unstyled">
                                    <li>Video 1</li>
                                    <li>Video 2</li>
                                    <li>Video 3</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>
</div>
</div>
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="/js/moment.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/bootstrap-datetimepicker.js"></script>
    <script src="/js/redactor/redactor.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#chatTwitch').css("height", $('#videoTwitch').css("height"));
            $('#form_date').datetimepicker({
                locale: 'fr'
            });
            $('.redactor').redactor({
                imageUploadCallback: function(image, json)
                {
                    image.addClass('img-responsive');
                },
                imageUpload: '/app_dev.php/admin/upload',
                minHeight: 300 // pixels
            });
        });
    </script>
{% endblock %}
</body>
</html>
