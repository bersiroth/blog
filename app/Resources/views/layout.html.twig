<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

        <title>{% block title %}Blog de bersiroth{% endblock %}</title>

        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/bootstrap-theme.css">

        <link rel="stylesheet" href="/css/generale.css">

        <link href='http://fonts.googleapis.com/css?family=Open+Sans:700,800,400' rel='stylesheet' type='text/css'>

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <div class="container">
            <header>
                {% block header %}<a href="{{ path('bersi_blog_article') }}"><img src="/images/blog-bersiroth2.jpg" class="img-responsive" alt="Responsive image"/></a>{% endblock %}
            </header>
            {% block menu %}
                {% set cat = app.request.attributes.get('category') %}
                <nav id="main" class="navbar navbar-inverse">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                <li {% if cat == 'video' or cat == ''  %}class="active"{% endif %} ><a href="{{ path('bersi_blog_article', { 'category': 'video'}) }}">Videos</a></li>
                                <li {% if cat == 'jeux-video' or cat == 'test' or cat == 'astuce' or cat == 'trophee' %}class="active"{% endif %} class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Jeux video<span class="caret"></span></a>
                                    <ul class="inverse-dropdown dropdown-menu">
                                        <li {% if cat == 'test' %}class="active"{% endif %}><a href="{{ path('bersi_blog_article', { 'category': 'test'}) }}">Tests</a></li>
                                        <li {% if cat == 'astuce' %}class="active"{% endif %}><a href="{{ path('bersi_blog_article', { 'category': 'astuce'}) }}">Astuces</a></li>
                                        <li {% if cat == 'trophee' %}class="active"{% endif %}><a href="{{ path('bersi_blog_article', { 'category': 'trophee'}) }}">Trophees</a></li>
                                        <li {% if cat == 'jeux-video' %}class="active"{% endif %}><a href="{{ path('bersi_blog_article', { 'category': 'jeux-video'}) }}">News</a></li>
                                    </ul>
                                </li>
                                <li {% if cat == 'high-tech' %}class="active"{% endif %}><a href="{{ path('bersi_blog_article', { 'category': 'high-tech'}) }}">High Tech</a></li>
                                <li {% if cat == 'mangas' %}class="active"{% endif %}><a href="{{ path('bersi_blog_article', { 'category': 'mangas'}) }}">Mangas</a></li>
                                <li><a href="#">Contact</a></li>
                            </ul>
                            <form class="navbar-form navbar-right" role="search">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Rechercher">
                                </div>
                                <button type="submit" class="btn btn-default">Valider</button>
                            </form>
                        </div>
                    </div>
                </nav>
            {% endblock %}
            {{ render(controller("BersiBlogBundle:Default:twitch")) }}
            <div class="row">
                <div class="col-sm-8" >
                    <div class="panel panel-default">
                        <div class="panel-body">
                            {% block body %}

                            {% endblock %}
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Carte des trophées</h3>
                        </div>
                        <div class="panel-body">
                            <img src="http://www.carte.psthc.fr/thc/28500/Bersiroth_PS3THC.png" border="0" alt="Trophées de Bersiroth" class="img-responsive center-block"/>
                            <br>
                            <img src="http://www.carte.psthc.fr/thc/28500/Bersiroth_platine1.gif" border="0" alt="Platines de Bersiroth" class="img-responsive center-block"/>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Suivre le blog</h3>
                        </div>
                        <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-4">Facebook</div>
                            <div class="col-xs-4">Youtube</div>
                            <div class="col-xs-4">Twitch</div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4">Twitter</div>
                            <div class="col-xs-4">Rss</div>
                            <div class="col-xs-4">Newsletter</div>
                        </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Dernieres videos</h3>
                        </div>
                        <div class="panel-body">
                            <ul class="list-unstyled">
                                <li>Video 1</li>
                                <li>Video 2</li>
                                <li>Video 3</li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Derniers tests</h3>
                        </div>
                        <div class="panel-body">
                            <ul class="list-unstyled">
                                <li>Tests 1</li>
                                <li>Tests 2</li>
                                <li>Tests 3</li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Dernieres astuces</h3>
                        </div>
                        <div class="panel-body">
                            <ul class="list-unstyled">
                                <li>Astuce 1</li>
                                <li>Astuce 2</li>
                                <li>Astuce 3</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
            <script src="/js/bootstrap.js"></script>
            <script>
                $(document).ready(function () {
                    $('#chatTwitch').css( "height" ,$('#videoTwitch').css( "height" ));
                });
            </script>
        {% endblock %}
    </body>
</html>
