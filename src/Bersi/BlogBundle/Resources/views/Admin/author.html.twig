{% extends ":Admin:layout.html.twig" %}

{% block body %}
    <a href="{{ path('admin_bersi_blog_add_author') }}" class="btn btn-primary pull-right" role="button">Ajouter</a>
    <br>
    <br>
    <br>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            {% for author in liste_authors %}
            {% if loop.first %}
            <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
            </tr>
            </thead>
            <tbody>
            {% endif %}
            <tr>
                <td>{{ author.id }}</td>
                <td><a href="{{ path('admin_bersi_blog_edit_author', { 'id': author.id}) }}">{{ author.pseudo }}</a></td>
            </tr>
            {% else %}
                <tr>
                    <td>Pas d'article trouv√©.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
