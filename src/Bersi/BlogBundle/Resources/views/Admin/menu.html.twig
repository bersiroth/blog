{% set route = app.request.attributes.get('_route') %}
<nav class="navbar navbar-default">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>

    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li {% if route == 'admin_bersi_blog' %}class="active"{% endif %} ><a
                            href="{{ path('admin_bersi_blog') }}">Accueil</a></li>
                {% for menu in menus %}
                    <li {% if route == 'admin_bersi_blog_' ~ menu|lower %}class="active"{% endif %}><a
                                href="{{ path('admin_bersi_blog_' ~ menu|lower) }}">{{ menu }}</a></li>
                {% endfor %}
                <li><a href="{{ path('bersi_blog_article') }}">Site</a></li>
            </ul>
            <form class="navbar-form navbar-right" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Rechercher">
                </div>
                <button type="submit" class="btn btn-default">Valider</button>
            </form>
        </div>
    </div>
</nav>
