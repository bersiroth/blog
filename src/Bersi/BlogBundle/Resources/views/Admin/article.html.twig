{% extends ":Admin:layout.html.twig" %}

{% block body %}
    <a href="{{ path('admin_bersi_blog_add_article') }}" class="btn btn-primary pull-right" role="button">Ajouter</a>
    <br>
    <br>
    <br>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            {% for article in liste_articles %}
            {% if loop.first %}
            <thead>
            <tr>
                <th>Date</th>
                <th>Titre</th>
                <th>Auteur</th>
                {#<th>image</th>#}
                {#<th>Contenu</th>#}
                <th>Categorie</th>
                <th>Tag</th>
                <th>Publier</th>
            </tr>
            </thead>
            <tbody>
            {% endif %}
            <tr>
                <td>{{ article.date|date('d-m-Y') }}</td>
                <td><a href="{{ path('admin_bersi_blog_edit_article', { 'id': article.id}) }}">{{ article.title }}</a></td>
                <td>{{ article.author.pseudo }}</td>
                {#<td>{{ article.image }}</td>#}
                {#<td>{{ article.content }}</td>#}
                <td>{{ article.category.name }}</td>
                <td>{% for tag in article.tags %}{{ tag.name }}, {% endfor %}</td>
                <td>
                    {% if article.published == true %}
                        <button href="{{ path('admin_bersi_blog_publish_article', { 'id': article.id}) }}"
                                id="publication-{{ article.id }}" class="btn btn-success publication btn-xs" role="button">
                            <span class="glyphicon glyphicon glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
                        </button>
                    {% else %}
                        <button href="{{ path('admin_bersi_blog_publish_article', { 'id': article.id}) }}"
                                id="publication-{{ article.id }}" class="btn btn-danger publication btn-xs" role="button">
                            <span class="glyphicon glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
                        </button>
                    {% endif %}
                </td>
            </tr>
            {% else %}
                <tr>
                    <td>Pas d'article trouv√©.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.publication').click(function () {
                $.ajax($(this).attr('href'))
                        .done(function (data) {
                            span = $('#publication-' + data['id'] + ' span');
                            button = $('#publication-' + data['id']);
                            alert("success");
                            if (span.hasClass('glyphicon-ok-circle')) {
                                span.replaceWith('<span class="glyphicon glyphicon glyphicon-remove-circle" aria-hidden="true"></span>');
                                button.addClass("btn-danger").removeClass("btn-success");
                            } else {
                                span.replaceWith('<span class="glyphicon glyphicon glyphicon-ok-circle" aria-hidden="true"></span>');
                                button.addClass("btn-success").removeClass("btn-danger");
                            }
                        })
                        .fail(function () {
                            alert("error");
                        });
            });
        });
    </script>
{% endblock %}