{% set cat = app.request.attributes.get('category') %}
<nav id="main" class="navbar navbar-inverse">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>
    <div class="container-fluid">
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                {% set cat = app.request.attributes.get('category') %}
                <li {% if cat == '' %}class="active"{% endif %} ><a href="{{ path('bersi_blog_article') }}">Home</a></li>
                {% for menu in menus %}
                    <li {% if cat == menu.name %}class="active"{% endif %}><a href="{{ path('bersi_blog_article', { 'category': menu.name}) }}">{{ menu.name }}</a></li>
                {% endfor %}
                <li><a href="#">Contact</a></li>
                <li><a href="{{ path('admin_bersi_blog') }}">Admin</a></li>
            </ul>
            <form class="navbar-form navbar-right" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Rechercher">
                </div>
                <button type="submit" class="btn btn-default">Valider</button>
            </form>
        </div>
    </div>
</nav>